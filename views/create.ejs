      <%- include("partials/header.ejs") %>

            <main>
                  <form action="/submit" method="POST">
                  <div class="container">
                        <h3>
                              Post creation
                        </h3>
                        
                        <div class="row">
                              <div class="col-8">
                                    <label for="post-title" class="form-label"></label>
                                    <input type="text" name="post-title" class="form-control form-control-lg" id="post-title" placeholder="Post Title" required="">
                              </div>

                              <div class="col-4 align-self-center ">
                                    <label for="post-author" class="form-label"></label>
                                    <input type="text" name="post-author" class="form-control" id="post-author" placeholder="Author Name" required="">
                              </div>
                        </div>
                        
                        <div class="row">
                              <div class="col-8">
                                    <label for="post-content" class="form-label"></label>
                                    <textarea class="form-control" name="post-content" id="post-content" rows="8" placeholder="Content"></textarea>
                              </div>
                        </div>

                  </div>
                  <div class="d-grid gap-2 d-sm-flex justify-content-sm-center my-5">
                        <button type="submit" class="btn btn-success btn-lg px-4 me-sm-3">Create post</button>
                  </div>
            </form>


                  

            </main>

      <%- include("partials/footer.ejs") %>